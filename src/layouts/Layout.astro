---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Bienvenido a Gpul | Gpul</title>

  </head>
  <body>
    <Navbar>
      <a href="#">
        <img src="https://gpul.org/img/logo-small.svg"/>
        GPUL
      </a>
      <a href="#"> Wiki </a>
      <a href="#"> Blog </a>
    </Navbar>
    <slot />
    <Footer/>
  </body>
</html>

<style>


  html,
  body {
    font-family: system-ui;
    background: var(--bg-color);
    color: var(fg-color);
    margin: 0;
    width: 100%;
  }

  a:first-child {
    font-weight: bold;
  }
  img {
    height: 34px;
  }
</style>

